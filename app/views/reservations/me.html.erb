<p id="notice"><%= notice %></p>

<div class="max-w-lg m-auto px-4">
  <div class="p-10 mt-20 bg-white border border-grey-light rounded">

    <h1 class="text-2xl mt-0 mb-6">My reservation</h1>
    <p class="text-md text-grey-darker mb-2"><strong>Reservation for: </strong><%= @reservation.user.name %></p>

    <p class="text-md text-grey-darker mb-6">
      <strong>Address:</strong>
      <%= @reservation.user.house_number %> <%= @reservation.user.street %>
    </p>

    <p class="text-md text-grey-darker mb-2">
      <strong>Date:</strong>
      <%= printDate(@reservation.date) %>
    </p>

    <p class="text-md text-grey-darker mb-2">
      <strong>Start:</strong>
      <%= printTime(@reservation.start) %>
    </p>

    <p class="text-md text-grey-darker mb-3">
      <strong>End:</strong>
      <%= printTime(@reservation.end) %>
    </p>

    <div class="text-md text-blue-700">
      <%= link_to 'Back', reservations_path %> | 
      <%= link_to 'Cancel my reservation', @reservation, method: :delete, data: { confirm: 'Are you sure you want to cancel your reservation?' } %>
    </div>
  </div>
</div>
